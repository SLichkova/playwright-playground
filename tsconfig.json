{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": true,
    "target": "es6",
    "moduleResolution": "node",
    "module": "esnext"
  },
  "include": [
    "api/**/*.ts",
    "nightwatch/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}